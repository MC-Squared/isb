{{ define "head" }}
    <style>
        .body {
            color: #332200;
        }

        .comment {
            color: #AAAAAA;
        }

        .section {
            color: #77AACC;
        }

        .chorus {
            margin-left: 10mm;
            color: #435400;
        }

        .chord {
            color: #0005AA;
        }

        .hidden {
            visibility: hidden;
        }
    </style>
{{ end }}

{{ define "content" }}
    <span class='section'>{{ .Section }}</span><br>

    {{ range .BeforeComments }}
        <span class='comment'>{{ . }}</span><br>
    {{ end }}
    {{ if .HasBeforeComments }}
        <br>
    {{ end }}

    {{ range .Stanzas }}
        {{ if .IsChorus }}
            <div class='chorus'>
        {{ end }}

        {{ range .BeforeComments }}
            <i>{{ . }}</i><br>
        {{ end }}

        {{ $print_chords := .HasChords }}
        
        {{ range $line := .Lines }}
            {{ if $print_chords }}
                {{ range $chord := .Chords }}
                    <span class='hidden'>
                        {{- $line.PreChordText $chord -}}
                    </span><span class='chord'>{{- .Text -}}</span>
                {{ end }}
                <br>
            {{ end }}
            {{ .Text }}<br>
        {{ end }}
        <br>

        {{ if .IsChorus }}
            </div>
        {{ end }}
    {{ end }}
{{ end }}

{{ define "sidebar" }}
    <a href="/">Back</a>
{{ end }}